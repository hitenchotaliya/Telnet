@model MVCTelent.Models.Admin

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Create</h1>
<div class="card">
    <div class="card-body mt-3">
<h4>Admin</h4>
<hr />
<div class="row">
    <div class="col-md-4">


        <div class="card">
            <div class="card-body ">
                <h5 class="card-title">Create New Admin</h5>

                <!-- Vertical Form -->
                <form asp-action="Create" class="row g-3 ">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Uname" class="control-label"></label>
                        <input asp-for="Uname" class="form-control" />
                        <span asp-validation-for="Uname" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked"
                                   checked>
                            <label class="form-check-label" for="flexSwitchCheckChecked">Active</label>
                        </div>

                        <!-- Hidden input to store checkbox value -->
                        <input type="hidden" id="isActiveInput" name="Isactive" value="true" />

                    </div>
                    <div class="text-center">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form><!-- Vertical Form -->

            </div>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark mt-1">Back</a>
</div>
<script>
    const checkbox = document.getElementById("flexSwitchCheckChecked");
    const hiddenInput = document.getElementById("isActiveInput");

    checkbox.addEventListener("change", function () {
        if (checkbox.checked) {
            hiddenInput.value = "true";
        } else {
            hiddenInput.value = "false";
        }
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}