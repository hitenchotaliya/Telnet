@model MVCTelent.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body mt-3">
<h1>Create</h1>

<h4>Category</h4>
        <div class="card">
            <div class="card-body mt-3">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CatName" class="control-label"></label>
                <input asp-for="CatName" class="form-control" />
                <span asp-validation-for="CatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatImg" class="control-label mt-1"></label>
                <input name="photo" type="file" class="form-control" />
                <span asp-validation-for="CatImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Isactive" class="control-label mt-1">
                    <option value="true">Active</option>
                    <option value="false">InActive</option>
                </select>
                <span asp-validation-for="Isactive" class="text-danger "></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark mt-1">Back</a>
</div>
</div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
