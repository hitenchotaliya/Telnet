@model MVCTelent.Models.UserProfile

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body mt-3">
<h1>Edit</h1>

<h4>UserProfile</h4>
<hr />
        <div class="card">
            <div class="card-body mt-3">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserProfileId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label" ></label>
                                <select asp-for="UserId" class="form-control"  asp-items="ViewBag.UserId" readonly></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageGelleryId" class="control-label"></label>
                <select asp-for="ImageGelleryId" class="form-control" asp-items="ViewBag.ImageGelleryId"></select>
                <span asp-validation-for="ImageGelleryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoGelleryId" class="control-label"></label>
                                <select asp-for="VideoGelleryId" class="form-control" asp-items="ViewBag.VideoGelleryId" ></select>
                <span asp-validation-for="VideoGelleryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
                    <a asp-action="Index"class="btn btn-outline-dark mt-1">Back</a>
</div>
</div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
