@model MVCTelent.Models.ImageGelleryPic

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body mt-3">
<h1>Edit</h1>

<h4>ImageGelleryPic</h4>
<hr />
        <div class="card">
            <div class="card-body mt-3">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImageGelleryPicId" />
            <div class="form-group mt-2">
                <label asp-for="PicName" class="control-label"></label>
                <img src="~/UserImage/@Model.PicName" height="200px" width="200px" alt="Your image" />
                <input name="photo" type="file" class="form-control" />
                <span asp-validation-for="PicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageGelleryId" class="control-label"></label>
                <select asp-for="ImageGelleryId" class="form-control" asp-items="ViewBag.ImageGelleryId"></select>
                <span asp-validation-for="ImageGelleryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>
</div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark mt-1">Back</a>
</div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
