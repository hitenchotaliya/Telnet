@model MVCTelent.Models.UserProfileDetail

@{
    ViewData["Title"] = "Create Profile";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="create-resume-bg">
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="page-header-title text-center text-white">
                    <h1 class="">Create Profile</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="text-dark mt-5">Other Details</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="job-detail mt-2 p-4">
                    <div class="custom-form">
                        @{
                            var userId = Context.Session.GetInt32("UserId");
                        }
                        <form method="post" enctype="multipart/form-data" asp-controller="UserData" asp-action="UserOtherDetail" asp-route-id="@userId">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group app-label">
                                        <label for="Education" class="text-muted">Education</label>
                                        <input asp-for="Education" name="photo2" id="Education" type="file" class="form-control resume" placeholder="">
                                    </div>
                                </div> 

                                <div class="col-md-6">
                                    <div class="form-group app-label">
                                        <label for="Certificate" class="text-muted">Certificate</label>
                                        <input asp-for="Certificate" name="photo1" id="Certificate" type="file" class="form-control resume" placeholder="">
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group app-label">
                                        <label for="Experience" class="text-muted">Experience</label>
                                        <input asp-for="Experience" name="photo" id="Experience" type="file" class="form-control resume" placeholder="">
                                    </div>
                                </div>



                                <div class="col-lg-12">
                                    <div class="form-group app-label">
                                        <label for="Description"> Description</label>
                                        <textarea asp-for="Description" id="Description" rows="4" class="form-control resume" placeholder=""></textarea>
                                    </div>
                                </div>

                                <div class="col-md-12 text-center">
                                    <div class="form-group">
                                        <button type="submit" class="submitBnt btn btn-custom mt-5" style="background-color: red; color: white;">Save</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>